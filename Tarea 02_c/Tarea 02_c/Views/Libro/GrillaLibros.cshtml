@*

*@

@model IEnumerable<Tarea_02_c.Models.Libro>

@{

}

<h1>Lista de Libros</h1>
<p>
    <a asp-action="Crear">Crear nuevo Libro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ISBN)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Autor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ISBN)
                </td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.Titulo">Editar</a> |
                    <a asp-action="Ver" asp-route-id="@item.Titulo">Ver</a> |
                    <a asp-action="Borrar" asp-route-id="@item.Titulo">Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>


